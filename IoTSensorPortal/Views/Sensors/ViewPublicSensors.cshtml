@model IEnumerable<IoTSensorPortal.Models.SensorViewModels.SensorShortViewModel>
<h2>View Public Sensors</h2>

<div class="jumbotron">
    <div class="lead">Search will be here</div>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Search</a></p>
</div>

@foreach (var sensor in Model)
{
    <div class="project-short inline-block">
        <header>
            <h3>@Html.ActionLink(sensor.Name, "Details", "Sensors", new { id = sensor.Id }, new { })</h3>
        </header>
    </div>
}

